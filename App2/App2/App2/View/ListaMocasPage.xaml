<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.View.ListaMocasPage">
    <ScrollView>
        <StackLayout>
            <Label Text="Listagem de Moças" HorizontalOptions="Center" FontSize="Medium" FontAttributes="Bold"></Label>
            <SearchBar x:Name="PesquisaNome" Placeholder="Informe a pesquisa" TextChanged="PesquisaNome_TextChanged"></SearchBar>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnAddMoca" Text="Nova"></Button>
                <Button x:Name="btnAtualizar" Text="Atualizar" Clicked="btnAtualizar_Clicked"></Button>
            </StackLayout>
            <ListView x:Name="ListViewMoca" VerticalOptions="Fill"></ListView>
        </StackLayout>
    </ScrollView>
</ContentPage>